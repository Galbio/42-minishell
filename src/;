#include "minishell.h"

char	check_exit_errors(char *command)
{
	t_int_tab	tabe;

	tabe = init_int_tab();
	while (command[++tabe.i])
	{
		if ((command[tabe.i] == 32) && !tabe.cur_quote)
			ft_putstr_fd("minishell: exit: too many arguments", 2);
		if ((command[tabe.i] == 32) && !tabe.cur_quote)
			return (0);
		if (!
	}
}

char	*ft_exit(char *command)
{
	int			dest;
	char		*av;

	write(2, "exit\n", 5);
	if (command[4] == 0)
		(free(command), exit(0));
	command += 5;
	if (check_exit_errors(command) == 1)
		exit(2);
	free(command - 5);
}
